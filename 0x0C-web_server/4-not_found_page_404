#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page.

apt-get -y install nginx
echo "Hello World!" > /var/www/html/index.html

replaced="server_name _;"
new_string="${replaced}\n\tlocation \/redirect_me {return 301 https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;}"

sed -i "s|$replaced|$new_string|" /etc/nginx/sites-available/default

error_404="${replaced}\n\tlocation @404 {return 404 'Ceci n\'est pas une page\\n';}"
sed -i "s|$replaced|$error_404|" /etc/nginx/sites-available/default
sudo sed -i 's/=404/@404/g' /etc/nginx/sites-available/default
